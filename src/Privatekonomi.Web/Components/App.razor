<!DOCTYPE html>
<html lang="sv">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content="En privatekonomi-applikation byggd med .NET 9, Blazor Server och MudBlazor" />
    <meta name="theme-color" content="#594AE2" />
    <meta name="apple-mobile-web-app-capable" content="yes" />
    <meta name="apple-mobile-web-app-status-bar-style" content="black-translucent" />
    <base href="/" />
    <link rel="manifest" href="manifest.json" />
    <link href="https://fonts.googleapis.com/css?family=Roboto:300,400,500,700&display=swap" rel="stylesheet" />
    <link href="_content/MudBlazor/MudBlazor.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="@Assets["app.css"]" />
    <link rel="stylesheet" href="@Assets["css/charts.css"]" />
    <link rel="stylesheet" href="@Assets["Privatekonomi.Web.styles.css"]" />
    <ImportMap />
    <link rel="icon" type="image/png" href="favicon.png" />
    <script>
        // Prevent flash of light theme by applying dark mode immediately if preferred
        (function() {
            try {
                var darkMode = localStorage.getItem('darkMode');
                var forceDark = document.documentElement.getAttribute('data-force-dark');
                
                // Three states: 'true' (dark), 'false' (light), null (use system)
                if (darkMode === 'true' || forceDark === 'true') {
                    document.documentElement.classList.add('mud-theme-dark');
                } else if (darkMode === 'false') {
                    // User explicitly chose light mode, don't apply dark class
                    // (light theme is the default, so no action needed)
                } else {
                    // No preference saved, check system preference
                    if (window.matchMedia && window.matchMedia('(prefers-color-scheme: dark)').matches) {
                        document.documentElement.classList.add('mud-theme-dark');
                    }
                }
                
                // Clean up the temporary attribute
                document.documentElement.removeAttribute('data-force-dark');
            } catch (e) {
                // Ignore localStorage errors
            }
        })();
    </script>
    <HeadOutlet @rendermode="InteractiveServer" />
</head>

<body>
    <Routes @rendermode="InteractiveServer" />
    <script src="_framework/blazor.web.js"></script>
    <script src="_content/MudBlazor/MudBlazor.min.js"></script>
    <script src="app.js"></script>
    <script>
        // Register service worker for PWA support
        window.pwaManager.register();
    </script>
</body>

</html>
